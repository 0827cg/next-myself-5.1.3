// Menu
//导航栏item
// --------------------------------------------------
.site-nav-toggle {
  position: static;
  float: right;
}


.menu {
  float: right;
  margin: 8px 0 0 0;

  +mobile() {
    margin: 20px 0 0 0;
    padding: 0;
  }

  br { display: none; }

  .menu-item {
    margin: 0;
    +mobile() { display: block; }
  }

  .menu-item a {
    padding: 0 10px;
    background: none;
    border: none;
    border-radius: 2px;
	
	//add myself
	color: $in-black-deep-self;    //设置子item的文本颜色
    transition-property: background;

    +mobile() {
      text-align: left;
    }
	//update
    &:hover { background: $in-black-deep-self-hover; }
  }

  a::before {
      display: none;

      +mobile() { display: block; }
    }

  +mobile() { float: none; }
}
